@model Gatherings.Models.Pages.EventPageModel

@{
    ViewBag.Title = "Details";

    string bannerImage = "http://lorempixel.com/680/485/city";
    
    if (Model.eventList.FirstOrDefault().Image == "")
    {
        bannerImage = "/images/blog/1.jpg";
    }
    else
    {
        bannerImage = Model.bloburl + Model.eventList.FirstOrDefault().Image.Replace(".", "_banner.");
    }
    
    decimal percentSponsored;
}


<style>
    .Class{
        backgroundImage(@Data.BackgroundImage)

    }

</style>


<div class="events-nav">

    <div class="container-fluid main-content">
        <div class="row">



            <div class="col-sm-12" style="padding-right:0;padding-left:0;">
                <ul class="nav nav-pills nav-left arrow">
                    <li role="presentation"><a href="#"><span class="glyphicon arrow glyphicon-arrow-left" aria-hidden="true"></span></a></li>
                    <li role="presentation" style="border-right:0;"><a href="#"><span class="glyphicon arrow glyphicon-arrow-right" aria-hidden="true"></span></a></li>
                </ul>


                <ul class="nav nav-pills navbar-right">
                    <li role="presentation"><h4>Hosted By @Model.eventList.FirstOrDefault().FullName</h4></li>
                    <!--li role="presentation" class="calendar-view-btn"><a href="#"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>Edit Event</a></li-->
                    <li role="presentation" class="calendar-view-btn"><a href="#">Accept Invite!</a></li>
                </ul>

            </div>
        </div>
    </div>

</div>

<div id="page-wrapper page-content-wrapper events-page">

    <div class="container-fluid main-content">


        <div class="row">

            <div class="col-md-12">
                <div class="big-event-img">
                    <img alt="@Model.eventList.FirstOrDefault().Title" src="@bannerImage">
                </div>
            </div>
        </div>

        <div class="row ">
            <div class="col-sm-6 event-title margin-right">
                <div class="details">
                    <h1>@Model.eventList.FirstOrDefault().Title</h1>
                    <h4>@Model.eventList.FirstOrDefault().StartDate</h4>
                    <h5>Location: @Model.eventList.FirstOrDefault().venue.VenueName <br />
                        @Model.eventList.FirstOrDefault().venue.VenueAddress.Street1 <br />
                        @if (Model.eventList.FirstOrDefault().venue.VenueAddress.Street2 != null)
                        {
                            @Model.eventList.FirstOrDefault().venue.VenueAddress.Street2 <br />
                        }
                        @Model.eventList.FirstOrDefault().venue.VenueAddress.City, @Model.eventList.FirstOrDefault().venue.VenueAddress.State, @Model.eventList.FirstOrDefault().venue.VenueAddress.PostalCode
                    </h5>

                    <div class="event-description">
                        Hosted By <strong>@Model.eventList.FirstOrDefault().FullName</strong>
                        <p>@Model.eventList.FirstOrDefault().Description</p>

                        <a href="#" class="bookmark-event button-new">Bookmark Event</a>
                        <a href="#" class="accept-event button-new">Accept Invite</a>
                    </div>
                </div>
            </div>
            
            <div class="col-sm-6 guest-info">
                <div class="row padding-r">
                    <div class="col-xs-4">
                        <h5>Attending</h5>
                        <h1>25</h1>
                    </div>

                    <div class="col-xs-4">
                        <h5>Maybe</h5>
                        <h1>25</h1>
                    </div>

                    <div class="col-xs-4">
                        <h5>Invited</h5>
                        <h1>25</h1>
                    </div>
                </div>
                
                <!--start chat-->
                <div class="panel panel-info  event-chat hidden-xs">
                    <div class="panel-heading">
                        Event Chat
                    </div>
                    <div class="panel-body">
                        <ul class="media-list">
                            <li class="media">
                                <div class="media-body">
                                    <div class="media">
                                        <a class="pull-left" href="#">
                                            <img class="media-object img-circle " src="/img/user.png" />
                                        </a>
                                        <div class="media-body">
                                            Donec sit amet ligula enim. Duis vel condimentum massa.

                                            Donec sit amet ligula enim. Duis vel condimentum massa.Donec sit amet ligula enim.
                                            Duis vel condimentum massa.
                                            Donec sit amet ligula enim. Duis vel condimentum massa.
                                            <br />
                                            <small class="text-muted">Alex Deo | 23rd June at 5:00pm</small>
                                            <hr />
                                        </div>
                                    </div>
                                </div>
                            </li>


                        </ul>
                    </div>
                    <div class="panel-footer">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Enter Message" />
                            <span class="input-group-btn">
                                <button class="btn btn-info" type="button">SEND</button>
                            </span>
                        </div>
                    </div>
                </div>

                <!--end chat-->

            </div>
        </div>


        <div class="row event-items">

            <div class="bg-for-events">



                <div class="col-xs 12 event-items-title visible-xs" style="margin-bottom:15px; padding:15px;">
                    <h5>Your Credits for Contribution</h5>

                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 90%;">
                            <span class="sr-only">60% Complete</span>
                        </div>
                    </div>


                    <p>Use Your credits to vote on the assortmant of items. If you want to place a higher vote contribution of a certain item, add more credits to that item using the “+” button.</p>
                </div>


                <!--START EVENT LIST-->

                <div class="col-sm-8 col-md-6 background-new">

                    <div class="event-items-title">
                        <h2>Event Items</h2>
                        <h4>Throwdown $65</h4>
                    </div>



                    <div class="row">

                        @foreach(var item in Model.eventList.FirstOrDefault().EventItems)
                        { 
                        <!--START ITEM-->

                        <div class="col-xs-12">
                            <div class="new-event-item">
                                <h3>@item.ItemName</h3>@item.
                                <h5>10 Contributers</h5>
                                <div class="vote-button">
                                    <a class="plus"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>
                                    <a class="minus"><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></a>
                                </div>

                                @if (item.ItemId > 0)
                                {
                                    percentSponsored = ((item.SponsoredAmount ?? 0) / (item.Price ?? 1) * 100);

                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="@(item.SponsoredAmount)" aria-valuemin="0" aria-valuemax="@(item.Price)" style="width: @String.Format("{0:0}", @percentSponsored)%;">
                                            <span class="sr-only">@String.Format("{0:0}", @percentSponsored)% Complete</span>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>


                        <div class="col-xs-12 more-info">

                            <div class="navbar-collapse navbar-ex2-collapse collapse">
                                <ul class="nav navbar-nav">
                                    <ul class="list-group">
                                        <li class="list-group-item">Aucune catégorie</li>
                                        <div class="newitems"></div>
                                        <br />
                                        <li class="list-group-item"><input type="text" placeholder="Add Details" class="newcat form-control" /></li>
                                    </ul>
                            </div>
                        </div>



                        <div class="col-xs-12">
                            <div class="item-info">
                                <div class="navbar-header2">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex2-collapse">
                                        <span class="glyphicon glyphicon-chevron-down" aria-hidden="true" style="padding-right:5px;"></span>More Info

                                    </button>
                                </div>
                            </div>
                        </div>

                        <!--END ITEM-->
                        }

                    </div>
                </div>



                <!--END EVENT LIST-->


                <div class="col-sm-4 col-md-6 hidden-xs">
                    <div class="background-new event-items-title" style="margin-right:-15px;">
                        <h2>Your Credits for Contribution</h2>

                        <div class="progress">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 90%;">
                                <span class="sr-only">60% Complete</span>
                            </div>
                        </div>


                        <p>Use Your credits to vote on the assortmant of items. If you want to place a higher vote contribution of a certain item, add more credits to that item using the “+” button.</p>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->